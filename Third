#include <stdio.h>
   int main(){

	   int num1, num2, soma;

	   printf("Informe o primeiro número: ");
	   fflush( stdout );
	   scanf("%d", &num1);
	   printf("Iforme o segundo número: ");
	   fflush(stdout);
	   scanf("%d", &num2);



	   soma = num1 + num2;


	   printf("O valor da soma é: %d ", soma);



}
