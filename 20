#include <stdio.h>
int main(){
	int  maior = -99999, menor = 9999 , soma = 0, valor;
	float media;
for (int i = 0; i < 10; i++){
	printf("Digite um valor: ");
	fflush(stdout);
	scanf("%d", &valor);
	if ( valor > 0){

	if( valor > maior){
		maior = valor;
	}
	if (valor == -1 || valor < menor){
		menor = valor;
	}soma = soma + valor;

	}
	else{
		i--;
	}
}
media = soma / 10;
printf("O maior valor é: %d\n", maior);
printf("O menor valor é: %d\n", menor);
printf("A media é: %f", media);
}
