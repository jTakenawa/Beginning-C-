#include <stdio.h>
int main(){
	int numero, maior = 0;
	printf("Digite um numero: ");
	fflush(stdout);
	scanf("%d", &numero);

	while(numero != 0){
		if (numero > maior ){
			maior = numero;
		}
		printf("Informe um numero:");
		fflush(stdout);
		scanf("%d", &numero);
	}
	printf("O maior numero Ã©: %d ", maior);

}
