#include <stdio.h>
int main(){
	//Declaração de variavel
	int num1, num2, soma, multiplicacao;

    // Entrada
	printf("Insira o primeiro número: ");
	fflush(stdout);
	scanf("%d", &num1);
	printf("Insira o segundo número: ");
	fflush(stdout);
	scanf("%d", &num2);
    //Processamento
	soma = num1 + num2;
    multiplicacao = soma * num1;
    //Saida
	printf("O resultado da operação foi %d",  multiplicacao);

}
